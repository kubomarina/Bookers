<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
 <ul>
  <p>error!</p>
  <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<div><%= f.submit 'Update Book' %></div>

<p><%= link_to "Show", book_path(@book) %>|<%= link_to "Back", "/books" %></p>

<% end %>