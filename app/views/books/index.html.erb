<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
 <ul>
  <p>error!</p>
  <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

 <%= f.text_field :title %>

 <h4>body</h4>
 <%= f.text_area :body %>
 <div class=button><%= f.submit 'Create Book' %></div>

<% end %>
